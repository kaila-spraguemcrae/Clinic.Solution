@{
  Layout = "_Layout";
}

@using Clinic.Models;
@model List<Clinic.Models.Patient>;

<h1>Patient Directory</h1>

@if (@Model.Count == 0)
{
  <h3>There are currently no patients in the clinic database system.</h3>
}

<ul>
@foreach (Patient patient in Model)
{
  <li>@Html.ActionLink($"{patient.PatientName} <br />&nbsp; Next Appointment: {patient.AppointmentDate}", "Details", new { id = patient.PatientId }) </li>
}
</ul>

<p>@Html.ActionLink("Add a new Patient", "Create")</p>
