@{
  Layout = "_Layout";
}

@model Clinic.Models.Patient

<h2>Edit</h2>
<hr/>
<h2>Edit this Patient: @Html.DisplayFor(model => model.PatientName) </h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.PatientId)
  <p>
    @Html.Label("Patient Name")
    @Html.EditorFor(model => model.PatientName)
  </p>
  <p>
    @Html.Label("Date of Next Appointment:")
    @Html.TextBoxFor(model => model.AppointmentDate)
  </p>
  <p>
  <input type="submit" value="save" />
  </p>
}

<p>@Html.ActionLink("Back to Patient List", "Index")</p>